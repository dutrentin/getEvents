<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1.0.1.0" author="Eduardo Trentin">
        <preConditions onFail="MARK_RAN" onFailMessage="Erro ao adicionar coluna DT_CREATION na tabela TASK">
            <not>
                <columnExists tableName="TASK" columnName="DT_CREATION" />
            </not>
        </preConditions>
        <comment>Adicionar coluna 'DT_CREATION' na tabela 'TASK'</comment>
        <addColumn tableName="TASK" >
            <column name="DT_CREATION" type="DATE"/>
        </addColumn>
        <rollback>
            ALTER TABLE TASK DROP COLUMN DT_CREATION;
        </rollback>
    </changeSet>

